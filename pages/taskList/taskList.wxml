<!--miniprogram/pages/taskList/taskList.wxml-->
<view class='page'>
  <view class='container page-header'>
    <text class='page-title'>任务列表</text>
  </view>
  <view class="page__bd">
    <view wx:for="{{taskList}}" wx:key="*this" wx:for-item="item" bindtap='showWorkList' id='{{item.task_id}}'>
      <wux-white-space size="default" />
      <wux-wing-blank size="default">
        <wux-card title="{{item.plan_name}}" thumb="../../image/list_24x24.png">
          <view slot="body">
            <label for='plan-code'>计划编码:
              <text class='' id='plan-code'>{{item.plan_code}}</text>
            </label>
          </view>
          <view slot="body">
            <label for='task-type'>任务类型:
              <text class='' id='task-type'>{{item.task_type}}</text>
            </label>
          </view>
          <view slot="body">
            <label for='check-type'>抽查方式:
              <text class='' id='check-type'>{{item.check_type}}</text>
            </label>
          </view>
          <view slot="body">
            <label for='create-org-name'>编制机构:
              <text class='' id='create-org-name'>{{item.create_org_name}}</text>
            </label>
          </view>
          <view slot="body">
            <label for='start-date'>开始时间:
              <text class='' id='start-date'>{{item.start_date}}</text>
            </label>
          </view>
          <view slot="body">
            <label for='end-date'>结束时间:
              <text class='' id='end-date'>{{item.end_date}}</text>
            </label>
          </view>
        </wux-card>
      </wux-wing-blank>
    </view>
  </view>
</view>